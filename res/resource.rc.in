#include "resource.h"
#include <winver.h>

// Icon resource
IDI_APPICON ICON "app_icon.ico"

// Version Information resource
VS_VERSION_INFO VERSIONINFO
    FILEVERSION     @PROJECT_VERSION_MAJOR@,@PROJECT_VERSION_MINOR@,@PROJECT_VERSION_PATCH@,0
    PRODUCTVERSION  @PROJECT_VERSION_MAJOR@,@PROJECT_VERSION_MINOR@,@PROJECT_VERSION_PATCH@,0
    FILEFLAGSMASK   VS_FFI_FILEFLAGSMASK
    FILEOS          VOS_NT_WINDOWS32
    FILETYPE        VFT_APP
    FILESUBTYPE     VFT2_UNKNOWN
BEGIN
    BLOCK "StringFileInfo"
    BEGIN
        BLOCK "080904b0" // U.K. English, Unicode
        BEGIN
            VALUE "CompanyName",      "Cosmic DNA Ltd."
            VALUE "FileDescription",  "A utility to use the screen as a light source."
            VALUE "FileVersion",      "@PROJECT_VERSION@"
            VALUE "InternalName",     "ScreenLight.exe"
            VALUE "LegalCopyright",   "Copyright (C) Cosmic DNA Ltd. All rights reserved."
            VALUE "OriginalFilename", "ScreenLight.exe"
            VALUE "ProductName",      "Screen Light"
            VALUE "ProductVersion",   "@PROJECT_VERSION@"
        END
    END
    BLOCK "VarFileInfo"
    BEGIN
        VALUE "Translation", 0x0809, 1200 // U.K. English, Unicode
    END
END
